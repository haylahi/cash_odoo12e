<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_payment_form_inherited_cash" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.cash</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <field name="payment_date" position="after">
                    <field name="invoice_number"/>
                    <field name="journal_ids" invisible="1"/>
            </field>
            <field name="journal_id" position="replace">
                    <field name="journal_id" widget="selection" attrs="{'readonly': [('state', '!=', 'draft')]}" domain="[('id', 'in', journal_ids]"/>
            </field>
        </field>
    </record>


</odoo>
